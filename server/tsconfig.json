{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true
  },
  "include": ["api/**/*", "agent/**/*"],
  "exclude": ["node_modules"]
}
